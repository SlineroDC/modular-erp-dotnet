@page
@model ERP.Admin.Pages.NotFoundModel
@{
    ViewData["Title"] = "Page Not Found";
}

<div class="flex min-h-[70vh] flex-col items-center justify-center text-center px-6 lg:px-8">
    <div class="-mt-16 z-10">
        <p class="text-base font-semibold text-constructor-blue dark:text-blue-400">404 Error</p>
        <h1 class="mt-2 text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-5xl">Page not found</h1>
        <p class="mt-4 text-base leading-7 text-gray-600 dark:text-gray-400">Sorry, we couldn’t find the page you’re looking for.</p>
        
        <div class="mt-10 flex items-center justify-between gap-x-10">
            
            <a asp-page="/Index" 
               class="rounded-md bg-[#003366] px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:opacity-90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 
                      dark:bg-white dark:text-[#003366] transition-colors">
                Go back home
            </a>

            <button onclick="toggleContactModal(true)" class="text-sm font-semibold text-gray-900 dark:text-gray-100 hover:underline">
                Contact support <span aria-hidden="true">&rarr;</span>
            </button>
        </div>
    </div>
</div>