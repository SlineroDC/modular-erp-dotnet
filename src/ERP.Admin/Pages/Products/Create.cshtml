@page
@model Create
@{
    ViewData["Title"] = "Create Product";
}

<form method="post" class="flex flex-1 flex-col overflow-y-auto h-full">
    <div class="flex-1 p-6 lg:p-8">
        <div class="mx-auto max-w-4xl">
            
            <div class="mb-8">
                <p class="text-4xl font-black tracking-tight text-gray-900 dark:text-white">Create New Product</p>
            </div>

            <div class="grid grid-cols-1 gap-8">
                <div class="rounded-xl border border-gray-200 bg-white p-6 dark:border-gray-700 dark:bg-gray-800 mb-6">
                    
                    <h3 class="mb-6 text-lg font-bold text-gray-900 dark:text-white">Basic Information</h3>
                    
                    <partial name="_ProductForm" for="Product" />
                    
                </div>
            </div>
        </div>
    </div>
    <footer
        class="sticky bottom-6 z-10 mx-6 mt-auto flex items-center justify-end gap-4 rounded-xl border border-gray-200 bg-white px-8 py-4 shadow-lg dark:border-gray-700 dark:bg-gray-800 transition-all">
    
        <a asp-page="./Index"
           class="flex h-11 items-center justify-center rounded-lg border border-gray-300 bg-white px-6 text-sm font-bold text-gray-700 hover:bg-gray-50 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700 transition-colors">
            Cancel
        </a>
    
        <button type="submit"
                class="flex h-11 items-center justify-center rounded-lg border border-transparent bg-gray-900 px-6 text-sm font-bold text-white shadow-md hover:bg-gray-700 dark:bg-orange-600 dark:hover:bg-orange-500 dark:text-white transition-colors">
            Save Product
        </button>
    
    </footer>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}