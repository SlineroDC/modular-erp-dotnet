@page
@model Create
@{
    ViewData["Title"] = "Create Product";
}

<form method="post" class="flex flex-1 flex-col overflow-y-auto h-full">
    <div class="flex-1 p-6 lg:p-8">
        <div class="mx-auto max-w-4xl">
            
            <div class="mb-8">
                <p class="text-4xl font-black tracking-tight text-gray-900 dark:text-white">Create New Product</p>
            </div>

            <div class="grid grid-cols-1 gap-8">
                <div class="rounded-xl border border-gray-200 bg-white p-6 dark:border-gray-700 dark:bg-gray-800">
                    
                    <h3 class="mb-6 text-lg font-bold text-gray-900 dark:text-white">Basic Information</h3>
                    
                    <partial name="_ProductForm" for="Product" />
                    
                </div>
            </div>
        </div>
    </div>

    <footer class="sticky bottom-0 mt-auto flex items-center justify-end gap-4 border-t border-gray-200 bg-white px-8 py-4 dark:border-gray-700 dark:bg-gray-800 transition-colors">
        <a asp-page="./Index" class="flex h-11 items-center justify-center rounded-lg border border-gray-300 bg-white px-6 text-sm font-bold text-gray-700 hover:bg-gray-50 
                                        dark:border-gray-600 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700 transition-colors">
            Cancel
        </a>
        
        <button type="submit" class="flex h-11 items-center justify-center rounded-lg bg-safety-orange px-6 text-sm font-bold text-white hover:opacity-90 transition-opacity shadow-lg shadow-orange-500/30">
            Save Product
        </button>
    </footer>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}