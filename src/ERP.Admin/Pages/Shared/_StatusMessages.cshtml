@if (TempData["SuccessMessage"] != null)
{
    <div class="mb-6 rounded-md bg-green-50 p-4 border border-green-200 dark:bg-green-900/30 dark:border-green-800 shadow-sm" role="alert">
        <div class="flex">
            <div class="flex-shrink-0">
                <span class="material-symbols-outlined text-green-400">check_circle</span>
            </div>
            <div class="ml-3">
                <p class="text-sm font-medium text-green-800 dark:text-green-200">
                    @TempData["SuccessMessage"]
                </p>
            </div>
            <div class="ml-auto pl-3">
                <button type="button" onclick="this.closest('[role=alert]').remove()" class="inline-flex rounded-md bg-green-50 p-1.5 text-green-500 hover:bg-green-100 dark:bg-transparent dark:text-green-400 dark:hover:bg-green-900/50">
                    <span class="material-symbols-outlined text-sm">close</span>
                </button>
            </div>
        </div>
    </div>
}

