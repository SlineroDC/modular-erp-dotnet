<div id="contactModal" class="relative z-[60] hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="fixed inset-0 bg-gray-900/75 transition-opacity backdrop-blur-sm"></div>

    <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
        <div class="flex min-h-full items-center justify-center p-4">
            <div
                class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:w-full sm:max-w-md dark:bg-gray-800 border dark:border-gray-700">

                <div class="bg-[#003366] px-4 py-3 text-white flex justify-between items-center">
                    <h3 class="font-bold flex items-center gap-2">
                        <span class="material-symbols-outlined">support_agent</span> Contact Support
                    </h3>
                    <button onclick="toggleContactModal(false)" class="hover:text-gray-300">
                        <span class="material-symbols-outlined text-sm">close</span>
                    </button>
                </div>

                <div class="p-6">
                    <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
                        Describe your issue or request. The administrator will receive this message immediately.
                    </p>

                    <textarea id="supportMessage" rows="4"
                              class="block w-full rounded-lg border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400"
                              placeholder="Type your message here..."></textarea>

                    <div id="supportStatus" class="mt-2 text-sm hidden"></div>
                </div>

                <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6 dark:bg-gray-700/50">
                    <button type="button" onclick="sendSupportEmail()"
                            class="inline-flex w-full justify-center rounded-md bg-[#003366] px-3 py-2 text-sm font-semibold text-white shadow-sm hover:opacity-90 sm:ml-3 sm:w-auto">
                        Send Message
                    </button>
                    <button type="button" onclick="toggleContactModal(false)"
                            class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto dark:bg-gray-700 dark:text-gray-300 dark:ring-gray-600">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>