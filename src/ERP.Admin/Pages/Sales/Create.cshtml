@page
@model ERP.Admin.Pages.CreateSaleModel
@{
    ViewData["Title"] = "New Sale";
}

<div class="flex flex-col h-full gap-6">
    <div class="flex justify-between items-center">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white">New Sale</h2>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 h-full">
        
        <div class="lg:col-span-2 flex flex-col gap-6">
            
            <div class="rounded-xl border border-gray-200 bg-white p-6 dark:border-gray-700 dark:bg-gray-800 shadow-sm">
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Select Customer</label>
                
                <select id="customerSelect" 
                        class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500 
                               dark:border-gray-800 dark:bg-gray-900 dark:text-white dark:placeholder-gray-400 dark:focus:border-blue-500 dark:focus:ring-blue-500">
                    <option value="" class="dark:bg-gray-700">-- Choose a Customer --</option>
                    @foreach (var c in Model.Customers)
                    {
                        <option value="@c.Id" class="dark:bg-gray-700">@c.Name @c.LastName (@c.IdDocument)</option>
                    }
                </select>
            </div>

            <div class="rounded-xl border border-gray-200 bg-white p-6 dark:border-gray-700 dark:bg-gray-800 shadow-sm">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Add Products</h3>
                
                <div class="grid grid-cols-1 md:grid-cols-12 gap-4 items-end">
                    
                    <div class="md:col-span-6">
                        <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Product</label>
                        
                        <select id="productSelect" onchange="updatePrice()" 
                                class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500 
                                       dark:border-gray-800 dark:bg-gray-900 dark:text-white dark:placeholder-gray-400 dark:focus:border-blue-500 dark:focus:ring-blue-500">
                            <option value="" data-price="0" class="dark:bg-gray-700">-- Select Product --</option>
                            @foreach (var p in Model.Products)
                            {
                                <option value="@p.Id" data-price="@p.Price" data-name="@p.Name" class="dark:bg-gray-700">
                                    @p.Name (Stock: @p.Stock)
                                </option>
                            }
                        </select>
                    </div>

                    <div class="md:col-span-2">
                        <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Price</label>
                        <input type="text" id="priceInput" readonly 
                               class="block w-full rounded-lg border border-gray-300 bg-gray-200 p-2.5 text-sm text-gray-500 cursor-not-allowed 
                                      dark:border-gray-800 dark:bg-gray-900 dark:text-white dark:placeholder-gray-400" 
                               value="0.00">
                    </div>

                    <div class="md:col-span-2">
                        <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Quantity</label>
                        <input type="number" id="qtyInput" min="1" value="1" 
                               class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500 
                                      dark:border-gray-800 dark:bg-gray-900 dark:text-white dark:placeholder-gray-400 dark:focus:border-blue-500 dark:focus:ring-blue-500">
                    </div>

                    <div class="md:col-span-2">
                        <button type="button" onclick="addToCart()" 
                                class="h-[42px] w-full flex items-center justify-center gap-2 rounded-lg text-sm font-bold shadow-md hover:opacity-90 transition-all
                                       bg-[#003366] text-white
                                       dark:bg-white dark:text-[#003366]">
                            <span class="material-symbols-outlined text-lg">add_shopping_cart</span>
                            Add
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="lg:col-span-1">
            <div class="rounded-xl border border-gray-200 bg-white dark:border-gray-700 dark:bg-gray-800 shadow-lg h-full flex flex-col">
                
                <div class="p-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-700/50 rounded-t-xl">
                    <h3 class="font-bold text-gray-900 dark:text-white flex items-center gap-2">
                        <span class="material-symbols-outlined text-constructor-blue dark:text-blue-400">receipt_long</span>
                        Sale Summary
                    </h3>
                </div>

                <div class="flex-1 p-4 overflow-y-auto max-h-[400px]">
                    <p id="emptyCartMsg" class="text-center text-gray-400 text-sm py-10">Cart is empty.</p>
                    
                    <table class="w-full text-sm text-left hidden" id="cartTable">
                        <thead class="text-xs text-gray-500 uppercase border-b dark:border-gray-700 dark:text-gray-400">
                            <tr>
                                <th class="py-2">Item</th>
                                <th class="py-2 text-center">Qty</th>
                                <th class="py-2 text-right">Total</th>
                                <th class="py-2"></th>
                            </tr>
                        </thead>
                        <tbody id="cartBody" class="divide-y divide-gray-100 dark:divide-gray-700 text-gray-900 dark:text-gray-300">
                            </tbody>
                    </table>
                </div>

                <div class="p-4 border-t border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-700/30 rounded-b-xl">
                    <div class="flex justify-between items-center mb-4">
                        <span class="text-lg font-bold text-gray-700 dark:text-gray-200">Total:</span>
                        <span class="text-2xl font-black text-green-600 dark:text-green-400" id="grandTotal">$0.00</span>
                    </div>
                    
                    <button type="button" onclick="submitSale()" 
                            class="w-full rounded-lg py-3 text-sm font-bold shadow-lg hover:opacity-90 transition-all flex justify-center items-center gap-2
                                   bg-[#003366] text-white
                                   dark:bg-white dark:text-[#003366]">
                        <span class="material-symbols-outlined">check_circle</span>
                        Complete Sale
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

@section Scripts {
    <script src="~/js/sales.js" asp-append-version="true"></script>
}